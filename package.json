  "author": {
    "name": "Marco Bucchi",
    "email": "mabucchi@uc.cl"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IIC2173-2018-2-G1/sample-typescript-service/issues"
  },
  "homepage": "https://github.com/IIC2173-2018-2-G1/sample-typescript-service#readme",
  "dependencies": {
    "cross-env": "^5.1.1",
    "express": "^4.16.4",
    "nps": "^5.7.1",
    "nps-utils": "^1.5.0",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/supertest": "^2.0.6",
    "@types/express": "^4.16.0",
