    "@types/nock": "^9.1.3",
    "jest": "23.6.0",
    "mock-express-request": "^0.2.0",
    "mock-express-response": "^0.2.1",
    "nock": "10.0.0",
    "ts-jest": "23.10.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/utils/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
